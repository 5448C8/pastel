{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": false,
    "esModuleInterop": true,
    "inlineSources": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
